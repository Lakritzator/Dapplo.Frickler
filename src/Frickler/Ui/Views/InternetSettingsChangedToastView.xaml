<toasts:ToastView x:Class="Dapplo.Frickler.Ui.Views.InternetSettingsChangedToastView"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                              xmlns:viewModels="clr-namespace:Dapplo.Frickler.Ui.ViewModels"
                              xmlns:toasts="clr-namespace:Dapplo.CaliburnMicro.Toasts;assembly=Dapplo.CaliburnMicro.Toasts"
                              mc:Ignorable="d" Width="200" Padding="5" Background="DarkRed"
                              d:DataContext="{d:DesignInstance viewModels:InternetSettingsChangedToastViewModel,IsDesignTimeCreatable=False}"
                              d:DesignHeight="300" d:DesignWidth="300">
	<StackPanel>
		<TextBlock Text="{Binding Message}" Foreground="White" TextWrapping="Wrap" />
	</StackPanel>
</toasts:ToastView>



